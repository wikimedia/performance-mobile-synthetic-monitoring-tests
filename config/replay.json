{
  "extends": "../secrets.json",
  "slug": "webpagereplay",
  "utc": true,
  "gzipHAR": true,
  "html": {
    "fetchHARFiles": true,
    "compareURL": "https://compare.sitespeed.io/"
  },
  "screenshot": {
    "type": "jpg"
  },
  "plugins": {
    "remove": [
      "thirdparty",
      "coach"
    ]
  },
  "graphite": {
    "messages": ["pageSummary", "run"]
  },
  "android": true,
  "replay": true,
  "copyLatestFilesToBaseGraphiteNamespace": true,
  "browsertime": {
    "cpu": true,
    "limitedRunData": true,
    "timeToSettle": 5000,
    "iterations": 11,
    "video": true,
    "visualMetrics": true,
    "visualElements": true,
    "androidRooted": true,
    "connectivity": {
      "engine": "throttle",
      "throttle": {
        "localhost": true
      },
      "profile": "custom",
      "alias:": "120rtt",
      "rtt": 120
    },
    "chrome": {
      "traceCategory": ["disabled-by-default-v8.cpu_profiler"],
      "cleanUserDataDir": true,
      "collectConsoleLog": true,
      "includeResponseBodies": "all",
      "enableTraceScreenshots": true,
      "args": [
        "--host-resolver-rules=MAP *:80 127.0.0.1:8085,MAP *:443 127.0.0.1:8086,EXCLUDE localhost",
        "--ignore-certificate-errors-spki-list=PhrPvGIaAMmd29hj8BCZOq096yj7uMpRNHpn5PDxI6I=",
        "--user-data-dir=/data/local/tmp/chrome/"
      ]
    },
    "firefox": {
      "preference": [
        "network.dns.forceResolve:127.0.0.1",
        "security.OCSP.enabled:0",
        "network.socket.forcePort:80=8085;443=8086"
      ],
      "acceptInsecureCerts": true,
      "disableBrowsertimeExtension": true
    }
  }
}